<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/camdam"

        >
        <ImageView
        android:id="@+id/back.png"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="24dp"

        />
        <TextView
            android:id="@+id/textview1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANH MỤC MÓN ĂN"
            android:textSize="27dp"
            android:textColor="@color/white"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="33dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/banner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner"
            android:layout_below="@+id/LinearLayout"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp"
            />
    <ImageView
        android:id="@+id/banner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/banner2"
        android:layout_toRightOf="@+id/banner1"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/LinearLayout"

        android:layout_marginLeft="10dp"


        />
    </LinearLayout>

    <ListView
        android:id="@+id/lvFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout1" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lvFood"
        android:layout_marginTop="25dp"
        android:src="@drawable/home2"
        android:layout_marginLeft="40dp"
        />


    <ImageView
        android:id="@+id/yeuthich"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/yeuthich"
        android:layout_toRightOf="@+id/home"
        android:layout_below="@+id/lvFood"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="60dp"
        />
    <ImageView
        android:id="@+id/giohang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/giohang2"
        android:layout_toRightOf="@+id/yeuthich"
        android:layout_below="@+id/lvFood"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        />
    <ImageView
        android:id="@+id/canhan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cannhan"
        android:layout_toRightOf="@+id/giohang"
        android:layout_below="@+id/lvFood"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        />



</LinearLayout>