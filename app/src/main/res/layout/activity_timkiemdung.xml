<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimKiemDung">
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="411dp"
        android:layout_height="120dp"
        android:background="@color/camdam">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_box_search"
            android:gravity="center">

            <ImageView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/noidungtimkiem"
                android:layout_width="216dp"
                android:layout_height="30dp"
                android:paddingLeft="20dp"
                android:text="Hamburger"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/speak"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/speak" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/banner1"/>

        <ImageView
            android:id="@+id/banner1"
            android:layout_width="376dp"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/banner1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/ketqua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout2"
        android:textStyle="italic"
        android:textSize="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/purple_700"
        android:text="Kết quả tìm kiếm cho 'Hamburger': 20 kết quả"/>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="386dp"
        android:layout_height="44dp"
        android:layout_below="@id/ketqua"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_box_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phobien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@drawable/tittle"
            android:text="Phổ biến"/>
        <TextView
            android:id="@+id/banchay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@drawable/tittle"
            android:text="Bán chạy"/>
        <TextView
            android:id="@+id/giacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@drawable/tittle"
            android:text="Giá cao"/>
        <TextView
            android:id="@+id/giathap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@drawable/tittle"
            android:textColor="@color/black"
            android:text="Giá thấp"/>


    </LinearLayout>

    <ListView
        android:id="@+id/dstimkiem"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="26dp" />

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/home1" />

        <ImageView
            android:id="@+id/tim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/vevtor1" />

        <ImageView
            android:id="@+id/giohang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/giohang" />

        <ImageView
            android:id="@+id/canhan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/canhan" />
    </LinearLayout>

</LinearLayout>