<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimKiemDung">
    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="120dp"
        android:background="@color/camdam">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_box_search"
            android:gravity="center">

            <ImageView
                android:id="@+id/search"
                android:layout_width="33dp"
                android:layout_height="41dp"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/noidungtimkiem"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Hamburger"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/speak"
            android:layout_width="33dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/speak" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="376dp"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/banner1"/>

        <ImageView
            android:id="@+id/banner1"
            android:layout_width="376dp"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/banner1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/ketqua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/opensans"
        android:textColor="@color/purple_700"
        android:text="Kết quả tìm kiếm cho 'Hamburger': 20 kết quả"/>

    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_box_title"
        android:fontFamily="@font/opensans"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_phobien"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_200"
            android:text="Phổ biến"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/bt_banchay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_title"
            android:text="Bán chạy"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/bt_giathap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_title"
            android:text="Giá thấp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/bt_giacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_title"
            android:text="Giá cao"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="408dp">

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="98dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/banner_monan">

            <ImageView
                android:id="@+id/hamburger1"
                android:layout_width="105dp"
                android:layout_height="86dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/hbgbo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/banner_monan">

                <TextView
                    android:id="@+id/ten1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="5dp"
                    android:text="Hamburger bò với tương ớt vị Caranbery" />

                <ImageView
                    android:id="@+id/danhgia"
                    android:layout_width="121dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/danhgia"/>

                <LinearLayout
                    android:layout_width="99dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mauvang"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="-20dp">

                    <Button
                        android:id="@+id/bt_giam1"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="-"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/bt_soluong1"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/bt_tang1"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="+"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <TextView
                    android:id="@+id/banner_con1"
                    android:layout_width="109dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/purple_500"
                    android:background="@drawable/banner_con1"
                    android:text="Ship miễn phí"/>
                <TextView
                    android:id="@+id/banner_con2"
                    android:layout_width="73dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="-18dp"
                    android:gravity="center"
                    android:textColor="@color/maudo"
                    android:background="@drawable/banner_con2"
                    android:text="Giảm 3%"/>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="98dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/banner_monan">

            <ImageView
                android:id="@+id/hamburger2"
                android:layout_width="105dp"
                android:layout_height="86dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/hbgcahoi"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/banner_monan">

                <TextView
                    android:id="@+id/ten2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Hamburger cá hồi nướng bóng đêm" />

                <ImageView
                    android:id="@+id/danhgia2"
                    android:layout_width="121dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/danhgia"/>
                <LinearLayout
                    android:layout_width="99dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mauvang"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="-20dp">

                    <Button
                        android:id="@+id/bt_giam2"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="-"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/bt_soluong2"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/bt_tang2"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="+"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <TextView
                    android:id="@+id/banner3"
                    android:layout_width="109dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/purple_500"
                    android:background="@drawable/banner_con1"
                    android:text="Ship miễn phí"/>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="98dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/banner_monan">

            <ImageView
                android:id="@+id/hamburger3"
                android:layout_width="105dp"
                android:layout_height="86dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/hbgga"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/banner_monan">

                <TextView
                    android:id="@+id/ten3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Hamburger gà với nước sốt đặc biệt" />

                <ImageView
                    android:id="@+id/danhgia3"
                    android:layout_width="121dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/danhgia1"/>
                <LinearLayout
                    android:layout_width="99dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mauvang"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="-20dp">

                    <Button
                        android:id="@+id/bt_giam3"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="-"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/bt_soluong3"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/bt_tang3"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="+"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <TextView
                    android:id="@+id/banner4"
                    android:layout_width="109dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/purple_500"
                    android:background="@drawable/banner_con1"
                    android:text="Ship miễn phí"/>
                <TextView
                    android:id="@+id/banner5"
                    android:layout_width="73dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="-18dp"
                    android:gravity="center"
                    android:textColor="@color/maudo"
                    android:background="@drawable/banner_con2"
                    android:text="Giảm 5%"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="363dp"
            android:layout_height="51dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/tim"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/tymxxamm" />

            <ImageView
                android:id="@+id/giohang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="13dp"
                app:srcCompat="@drawable/ghxam" />

            <ImageView
                android:id="@+id/nguoi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/nguoixamm" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>