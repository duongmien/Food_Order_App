<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimKiemSai">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="120dp"
        android:background="@color/camdam">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_box_search"
            android:gravity="center">

            <ImageView
                android:id="@+id/search"
                android:layout_width="33dp"
                android:layout_height="41dp"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/noidungtimkiem"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="abdksfk"
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/speak"
            android:layout_width="33dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/speak" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="376dp"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/banner1"/>

        <ImageView
            android:id="@+id/banner1"
            android:layout_width="376dp"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/banner1"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/sorry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/timkiemsai"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:fontFamily="@font/opensans"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="XIN LỖI"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="17dp"
        android:fontFamily="@font/opensans"
        android:layout_gravity="center_horizontal"
        android:text="Chúng tôi không thể tìm thấy kết quả của bạn"/>

    <Button
        android:id="@+id/bt_timkiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="18"
        android:fontFamily="@font/opensans"
        android:textSize="13dp"
        android:background="@color/mauhuong"
        android:textColor="@color/maudo"
        android:layout_gravity="center_horizontal"
        android:text="Vui lòng nhập lại với từ khóa khác"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/tim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/tymxxamm" />

        <ImageView
            android:id="@+id/giohang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13dp"
            app:srcCompat="@drawable/ghxam" />

        <ImageView
            android:id="@+id/nguoi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/nguoixamm" />

    </LinearLayout>



</LinearLayout>