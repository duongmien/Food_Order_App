<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DanhSachMon">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="120dp"
        android:background="@color/camdam">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_box_search"
            android:gravity="center">

            <ImageView
                android:id="@+id/search"
                android:layout_width="33dp"
                android:layout_height="41dp"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/noidungtimkiem"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:hint="Tìm món ở đây..."
                android:paddingLeft="35dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/speak"
            android:layout_width="33dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/speak" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="376dp"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/bannerdsmon" />

        <ImageView
            android:id="@+id/banner1"
            android:layout_width="376dp"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/bannerdsmon"/>

    </LinearLayout>

    <ListView
        android:id="@+id/dsmonan"
        android:layout_width="361dp"
        android:layout_height="413dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="26dp" />

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/home1" />
        <ImageView
            android:id="@+id/tim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/vevtor1" />
        <ImageView
            android:id="@+id/giohang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/giohang" />
        <ImageView
            android:id="@+id/canhan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/canhan" />
    </LinearLayout>

</LinearLayout>