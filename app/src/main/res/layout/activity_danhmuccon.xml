<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DanhMucCon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/camdam">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="43dp"
            android:src="@drawable/back" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/bannerdsmon" />

        <ImageView
            android:id="@+id/banner1"
            android:layout_width="330dp"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:src="@drawable/bannerdsmon"/>

    </LinearLayout>

    <ListView
        android:id="@+id/danhmuc"
        android:layout_width="387dp"
        android:layout_height="429dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="26dp" />
    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="74dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/home1" />

        <ImageView
            android:id="@+id/tim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/vevtor1" />

        <ImageView
            android:id="@+id/giohang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/giohang" />

        <ImageView
            android:id="@+id/canhan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/canhan" />
    </LinearLayout>

</LinearLayout>